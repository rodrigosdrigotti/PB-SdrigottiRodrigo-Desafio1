<h2>Lista de Productos</h2>

<div class="containerP">
    <div class="products-container">
        {{#each products}}
        <div class="productCard">
            <div class="info">
                <p class="product-title">{{this.title}}</p>
                <div class="images">
                    <div class="img">
                        <img src="{{this.thumbnail}}">
                    </div>
                </div>
                <p>{{this.category}}</p>
                <p>{{this.description}}</p>
                <p>CODE: {{this.code}}</p>
                <div class="info-price">
                    <p>PRICE: ${{this.price}}</p>
                    <p>STOCK: {{this.stock}}</p>
                </div>
            </div>
            <a href="/api/carts/"><button class="button">Add to Cart</button></a>
        </div>
        {{/each}}
    </div>
    {{#if hasPrevPage}}
        <a href="{{prevLink}}"><button class="button">Anterior</button></a>
    {{/if}}

    {{#if hasNextPage}}
        <a href="{{nextLink}}"><button class="button">Siguiente</button></a>
    {{/if}}
</div>


